<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="106sp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="83dp"
        android:backgroundTint="@color/colorAccept"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="@string/hint_user_field"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColorHint" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_below="@+id/user_field"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/nunito"
        android:text="@string/optional"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/view_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="206dp"
        android:layout_marginTop="-19dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="@font/nunito"
        android:text="@string/location"
        android:textColor="@color/textColorLink"
        android:textAlignment="center" />

    <Button
        android:id="@+id/main_btn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="107dp"
        android:backgroundTint="@color/colorAccept"
        android:fontFamily="@font/nunito"
        android:text="@string/main_btn"
        android:textColor="@color/colorPrimary"
        app:cornerRadius="50dp" />

    <TextView
        android:id="@+id/result_info"
        android:layout_below="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="20sp" />

</RelativeLayout>