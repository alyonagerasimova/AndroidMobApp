<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow_back"
        android:layout_marginStart="28dp"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/nunito"
        android:text="Город"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/now_temp"
        android:layout_width="166dp"
        android:layout_height="90dp"
        android:layout_below="@id/arrow_back"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="29dp"
        android:background="#80FFFFFF"
        android:fontFamily="@font/nunito"
        android:paddingHorizontal="18dp"
        android:paddingTop="15dp"
        android:text="+20°С"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/now_temp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="65dp"
        android:text="Понедельник"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/now_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/now_temp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="42dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/drop_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_of_week"
        android:layout_marginStart="70dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="32%"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wind_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drop_info"
        android:layout_marginStart="70dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="12 км/ч"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/drop_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/day_of_week"
        android:layout_marginStart="47dp"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/drop" />

    <ImageView
        android:id="@+id/wind_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/drop_icon"
        android:layout_marginStart="47dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/wind" />

</RelativeLayout>