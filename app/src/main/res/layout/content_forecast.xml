<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/arrow"/>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow_back"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Самарская область"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/now_temp"
        android:layout_width="166dp"
        android:layout_height="90dp"
        android:layout_below="@id/arrow_back"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="22dp"
        android:background="#80FFFFFF"
        android:fontFamily="@font/nunito_sans_bold"
        android:paddingHorizontal="18dp"
        android:paddingTop="15dp"
        android:text="+20°С"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name"
        android:layout_marginStart="27dp"
        android:layout_marginTop="65dp"
        android:text="Понедельник"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/now_weather_icon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/now_temp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="42dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/drop_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_of_week"
        android:layout_marginStart="70dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="32%"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wind_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drop_info"
        android:layout_marginStart="70dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="12 км/ч"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/drop_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/day_of_week"
        android:layout_marginStart="47dp"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/drop" />

    <ImageView
        android:id="@+id/wind_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/drop_icon"
        android:layout_marginStart="47dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/wind" />

    <LinearLayout
        android:id="@+id/first_block_weather"
        android:layout_width="74dp"
        android:layout_height="172dp"
        android:layout_below="@+id/wind_icon"
        android:layout_marginStart="25dp"
        android:layout_marginTop="94dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="13dp"
            android:text="Вт"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/first_day_weather_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/temp_of_first_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="5dp"
            android:text="+16°С"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/vertical_block1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_icon1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/drop" />

            <TextView
                android:id="@+id/drop_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vertical_block1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wind_icon1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/wind" />

            <TextView
                android:id="@+id/wind_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_block_weather"
        android:layout_width="74dp"
        android:layout_height="172dp"
        android:layout_below="@+id/wind_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="94dp"
        android:layout_toEndOf="@+id/first_block_weather"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/second_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="13dp"
            android:text="Ср"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/second_day_weather_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/temp_of_second_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="5dp"
            android:text="+16°С"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/vertical_block2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_icon2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/drop" />

            <TextView
                android:id="@+id/drop_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vertical_block2.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wind_icon2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/wind" />

            <TextView
                android:id="@+id/wind_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_block_weather"
        android:layout_width="74dp"
        android:layout_height="172dp"
        android:layout_below="@+id/wind_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="94dp"
        android:layout_toEndOf="@+id/second_block_weather"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/third_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="13dp"
            android:text="Чт"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/third_day_weather_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/temp_of_third_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="5dp"
            android:text="+16°С"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/vertical_block3.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_icon3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/drop" />

            <TextView
                android:id="@+id/drop_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vertical_block3.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wind_icon3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/wind" />

            <TextView
                android:id="@+id/wind_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_block_weather"
        android:layout_width="74dp"
        android:layout_height="172dp"
        android:layout_below="@+id/wind_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="94dp"
        android:layout_toEndOf="@+id/third_block_weather"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fourth_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="13dp"
            android:text="Пт"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/fourth_day_weather_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/temp_of_fourth_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="5dp"
            android:text="+16°С"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/vertical_block4.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drop_icon4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/drop" />

            <TextView
                android:id="@+id/drop_info4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/nunito"
                android:text="32%"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
